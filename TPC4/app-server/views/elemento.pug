extends layout

block content

  header.w3-margin-left

    h1.w3-text-blue 
      a(href="/" style="text-decoration: none")  Tabela Periódica - 
      span.w3-text-teal Elemento #{id}

  
  if elemento.length
  
    each e in elemento
      ul
        li
          b #{e[0]}: 
          if e[0] === "periodo"
            a(href=`/periods/${e[1]}`)= e[1]
          else if e[0] === "grupo"
            a(href=`/groups/${e[1]}`)= e[1]
          else
            span= e[1]
      
  else 
    p.w3-margin-left Não existe informação sobre este elemento.

  span(onclick=`window.history.go(-1)` style="text-decoration: underline; cursor:pointer;" ).w3-margin-left Voltar
  a(href="/elements").w3-margin-left Lista de Elementos